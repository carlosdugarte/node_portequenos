<div class="container">
    <h1 class="titulos">Vista de Productos</h1>
    <br>

    {{#if hayProductos}}

    <div class="divProductos">

            {{#each product}}
            <div class="card text-center" style="width: 15rem;">
                <img class="card-img-top" src={{this.thumbnail}}  alt="not found">
                <div class="card-body">
                    <h1 class="titulos4">{{this.title}}</h1>
                    <p>${{this.price}} ARS</p>                                            
                </div>
                <div>
                    <button type="button" id="" class="btn btn btn-dark">Agregar al carrito</button>
                </div>
                <br><br>
            </div> 
            {{/each}}

    </div>
    {{else}}
    <h3 class="alert alert-warning">No se encontraron productos</h3>
    {{/if}}
    <br>
    <a href="/" type="button" class="btn btn-primary">Cargar un nuevo producto</a>
</div>

